if test `lsb_release -sc` = "stretch" || test `lsb_release -sc` = "xenial"; then
export CC=clang-6.0
export CXX=clang++-6.0
export AR=llvm-6.0-ar
export NM=llvm-6.0-nm
export RANLIB=llvm-6.0-ranlib
else
export CC=clang
export CXX=clang++
export AR=llvm-ar
export NM=llvm-nm
export RANLIB=llvm-ranlib
fi

if test `lsb_release -sc` = "xenial" || test `lsb_release -sc` = "bionc"; then
export PATH=/usr/lib/nodejs-mozilla/bin/:$PATH
fi

ac_add_options --prefix=/usr
ac_add_options --enable-optimize="-O3 -march=core2 -mtune=generic -w"
ac_add_options --enable-eme=widevine
ac_add_options --target=x86_64-pc-linux-gnu
ac_add_options --enable-pulseaudio
ac_add_options --enable-alsa
ac_add_options --enable-jack

#X=$(($(getconf _NPROCESSORS_ONLN 2>/dev/null || getconf NPROCESSORS_ONLN)*3/2))

mk_add_options AUTOCLOBBER=1
#mk_add_options MOZ_MAKE_FLAGS=-j${X%.*}

ac_add_options --disable-debug
ac_add_options --disable-crashreporter
ac_add_options --disable-profiling
ac_add_options --disable-signmar
ac_add_options --disable-tests
ac_add_options --disable-verify-mar
ac_add_options --disable-dmd

ac_add_options "MOZ_ALLOW_LEGACY_EXTENSIONS=1"
ac_add_options --enable-application=browser
ac_add_options --disable-updater

ac_add_options --enable-release

ac_add_options --enable-rust-simd

ac_add_options --enable-lto
ac_add_options --enable-hardening
ac_add_options --with-app-name=waterfox
ac_add_options --with-app-basename=Waterfox
ac_add_options --with-branding=browser/branding/unofficial
ac_add_options --with-distribution-id=org.waterfoxproject

export MOZ_GECKO_PROFILER=
export MOZ_ENABLE_PROFILER_SPS=
export MOZ_PROFILING=
export MOZ_MAINTENANCE_SERVICE=
MOZ_REQUIRE_SIGNING=0